{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@user/*": ["user/*"],
      "@utils/*": ["utils/*"],
      "@auth/*": ["auth/*"],
    },
    "incremental": true
  }
}
